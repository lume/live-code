{
	"name": "@lume/live-code",
	"version": "0.3.5",
	"main": "./dist/live-code.umd.js",
	"scripts": {
		"start": "npm run build && npm run examples",
		"dev": "npm run build -- --watch",
		"examples": "live-server .",
		"lint": "vue-cli-service lint",
		"build": "vue-cli-service build --target lib --name live-code ./src/index.js",
		"test": "npm run lint && npm run build",
		"clean": "rimraf dist",
		"release:patch": "npm test && npm version patch --message 'v%s' && npm publish && git push --follow-tags",
		"release:minor": "npm test && npm version minor --message 'v%s' && npm publish && git push --follow-tags",
		"release:major": "npm test && npm version major --message 'v%s' && npm publish && git push --follow-tags"
	},
	"dependencies": {
		"core-js": "^3.32.1",
		"lodash": "^4.17.15",
		"vue": "2.7.14",
		"vue-prism-editor": "^0.3.0"
	},
	"devDependencies": {
		"@babel/eslint-parser": "7.22.11",
		"@vue/cli-plugin-babel": "5.0.8",
		"@vue/cli-plugin-eslint": "5.0.8",
		"@vue/cli-service": "5.0.8",
		"eslint": "8.48.0",
		"eslint-plugin-vue": "9.17.0",
		"live-server": "^1.2.2",
		"prismjs": "1.17.1",
		"rimraf": "^5.0.1",
		"strip-indent": "3.0.0",
		"vue-template-compiler": "2.7.14"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"eslint:recommended"
		],
		"rules": {},
		"parserOptions": {
			"parser": "@babel/eslint-parser"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	]
}
