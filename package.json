{
	"name": "@lume/live-code",
	"version": "0.1.1",
	"main": "./dist/live-code.umd.js",
	"scripts": {
		"start": "npm run examples",
		"dev": "npm run start",
		"examples": "vue-cli-service serve",
		"build:example": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"build": "vue-cli-service build --target lib --name live-code ./src/index.js",
		"test": "npm run lint && npm run build",
		"prepare": "npm run build",
		"release:patch": "npm run test && npm version patch --message 'v%s' && npm publish && git push --follow-tags",
		"release:minor": "npm run test && npm version minor --message 'v%s' && npm publish && git push --follow-tags",
		"release:major": "npm run test && npm version major --message 'v%s' && npm publish && git push --follow-tags"
	},
	"dependencies": {
		"core-js": "^2.6.5",
		"lodash": "^4.17.15",
		"vue": "^2.6.10",
		"vue-prism-editor": "^0.3.0"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.10.0",
		"@vue/cli-plugin-eslint": "^3.10.0",
		"@vue/cli-service": "^3.10.0",
		"babel-eslint": "^10.0.1",
		"babel-standalone": "^6.26.0",
		"eslint": "^5.16.0",
		"eslint-plugin-vue": "^5.0.0",
		"prismjs": "^1.17.1",
		"vue-template-compiler": "^2.6.10"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"eslint:recommended"
		],
		"rules": {},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	]
}
